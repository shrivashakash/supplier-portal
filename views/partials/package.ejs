                          <div class="mb-2">
                            <input
                              type="checkbox"
                              id="activities0"
                              name="itineraries[0][activities]"
                              class="form-checkbox mr-2"
                            />
                            <label for="activities0" class="text-gray-700"
                              >Activities</label
                            >
                          </div>
                          <div class="mb-2">
                            <input
                              type="checkbox"
                              id="transfers0"
                              name="itineraries[0][transfers]"
                              class="form-checkbox mr-2"
                            />
                            <label for="transfers0" class="text-gray-700"
                              >Transfers</label
                            >
                          </div>
                          <div class="mb-2">
                            <label for="images0" class="block text-gray-700"
                              >Images:</label
                            >
                            <input
                              type="file"
                              id="images0"
                              name="itineraries[0][images][]"
                              class="form-input mt-1 block w-full"
                              multiple
                            />
                          </div>
                        </div>
                      </div>
                      <button
                        id="addItinerary"
                        class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600 mt-4"
                      >
                        Add Itinerary Item
                      </button>
                    </div>
                  </div>
                </div>

                <script>
                  // JavaScript code for dynamic addition of itinerary items
                  const itineraryItems =
                    document.getElementById("itineraryItems");
                  const addItineraryButton =
                    document.getElementById("addItinerary");

                  let itineraryIndex = 1; // Start with 1 as we already have one itinerary item in the HTML

                  addItineraryButton.addEventListener("click", () => {
                    const itineraryItem = `
            <div class="border rounded p-4 mb-4">
                <div class="mb-2">
                    <label for="day${itineraryIndex}" class="block text-gray-700">Day:</label>
                    <input type="number" id="day${itineraryIndex}" name="itineraries[${itineraryIndex}][day]" class="form-input mt-1 block w-full" required>
                </div>
                <div class="mb-2">
                    <label for="title${itineraryIndex}" class="block text-gray-700">Title:</label>
                    <input type="text" id="title${itineraryIndex}" name="itineraries[${itineraryIndex}][title]" class="form-input mt-1 block w-full" required>
                </div>
                <div class="mb-2">
                    <input type="checkbox" id="flight${itineraryIndex}" name="itineraries[${itineraryIndex}][flight]" class="form-checkbox mr-2">
                    <label for="flight${itineraryIndex}" class="text-gray-700">Flight</label>
                </div>
                <div class="mb-2">
                    <input type="checkbox" id="hotel${itineraryIndex}" name="itineraries[${itineraryIndex}][hotel]" class="form-checkbox mr-2">
                    <label for="hotel${itineraryIndex}" class="text-gray-700">Hotel</label>
                </div>
                <div class="mb-2">
                    <input type="checkbox" id="activities${itineraryIndex}" name="itineraries[${itineraryIndex}][activities]" class="form-checkbox mr-2">
                    <label for="activities${itineraryIndex}" class="text-gray-700">Activities</label>
                </div>
                <div class="mb-2">
                    <input type="checkbox" id="transfers${itineraryIndex}" name="itineraries[${itineraryIndex}][transfers]" class="form-checkbox mr-2">
                    <label for="transfers${itineraryIndex}" class="text-gray-700">Transfers</label>
                </div>
                <div class="mb-2">
                    <label for="images${itineraryIndex}" class="block text-gray-700">Images:</label>
                    <input type="file" id="images${itineraryIndex}" name="itineraries[${itineraryIndex}][images][]" class="form-input mt-1 block w-full" multiple>
                </div>
            </div>
        `;
                    itineraryItems.insertAdjacentHTML(
                      "beforeend",
                      itineraryItem
                    );
                    itineraryIndex++;
                  });
                </script>
                <button
                  type="submit"
                  class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600"
                >
                  Create Package
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
